<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoystickFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <io.github.controlwear.virtual.joystick.android.JoystickView
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/joystickView"
            android:layout_width="280dp"
            android:layout_height="280dp"
            custom:JV_buttonSizeRatio="15%"
            custom:JV_fixedCenter="false"
            android:background="@drawable/controlbg"
            custom:JV_buttonImage="@drawable/controlcursor"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/endManualButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAllCaps="false"
            android:text="End Manual Mode"
            android:visibility="gone"
            android:background="@drawable/redroundbg"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</FrameLayout>